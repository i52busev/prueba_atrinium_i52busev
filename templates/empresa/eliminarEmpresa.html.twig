{% extends 'principal/index.html.twig' %}

{% block title %}Eliminar una empresa{% endblock %}

{% block body %}

<div class="container h-100 " style="margin-top:60px">
    <div class="row h-100-justify-content-center align-items-center ">
        <div class="col-6 bg-white rounded my-3 p-5">
            <h3>¿Está seguro de eliminar la empresa con los siguientes datos?</h3>
            <div style="border: 7px ridge DeepPink;">
            {{form(formulario)}}
            </div>
            <div style="margin-top:10px">
                <button type="button" class="btn btn-default" onclick="location.href='{{ path('listadoEmpresas')}}'">Cancelar</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}